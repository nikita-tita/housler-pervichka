# ===========================================
# Database (PostgreSQL with PostGIS)
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=housler_agent
DB_USER=housler
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# For local development use localhost, for Docker use service name
# Development: postgresql://housler:housler123@localhost:5432/housler
# Production: postgresql://housler:PASSWORD@postgres:5432/housler_agent
DATABASE_URL=postgresql://housler:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/housler_agent

# ===========================================
# Redis
# ===========================================
# Development: redis://localhost:6379
# Production: redis://redis:6379
REDIS_URL=redis://redis:6379

# ===========================================
# Application
# ===========================================
NODE_ENV=production
API_PORT=3001

# ===========================================
# Frontend (Next.js)
# ===========================================
# This is baked into the frontend build, change in docker-compose.prod.yml
NEXT_PUBLIC_API_URL=https://agent.housler.ru/api

# ===========================================
# Authentication
# ===========================================
# IMPORTANT: Generate a secure random string for production!
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=7d

# ===========================================
# Optional: External Services
# ===========================================
# YANDEX_MAPS_API_KEY=
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
